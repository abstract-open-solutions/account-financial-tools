<?xml version="1.0" ?>
<openerp>
	<data>

	    <record id="account_invoice_form_exchrate" model="ir.ui.view">
            <field name="name">account.invoice.form.exchrate</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="currency_id" position="after">
                    <field name="custom_exchange_rate"
                        groups="base.group_multi_currency"/>
                </field>
            </field>
        </record>

        <record id="account_invoice_supplier_form_exchrate" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.exchrate</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="currency_id" position="after">
                    <field name="custom_exchange_rate"
                        groups="base.group_multi_currency"/>
                </field>
            </field>
        </record>

        <record id="account_invoice_supplier_form_exchrate" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.exchrate</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="currency_id" position="after">
                    <field name="custom_exchange_rate"
                        groups="base.group_multi_currency"/>
                </field>
            </field>
        </record>
        
        <record id="account_invoice_supplier_form_line_curr" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.line.curr</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='price_unit']" position="after">
                    <field name="base_currency_price_unit"/>
                </xpath>
            </field>
        </record>

        <record id="view_voucher_payment_currency" model="ir.ui.view">
            <field name="name">account.voucher.payment.currency</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher.view_vendor_payment_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="payment_rate" position="replace"/>
                <field name="payment_rate_currency_id" position="replace"/>
                <xpath expr="//group/group[1]" position="replace">
                    <group>
                        <label for="partner_id"/>
                        <div>
                            <field name="partner_id" required="1" invisible="context.get('line_type', False)" on_change="onchange_partner_id(partner_id, journal_id, amount, currency_id, type, date, context)" context="{'invoice_currency':currency_id, 'default_customer': 0, 'search_default_supplier': 1, 'default_supplier': 1}"  string="Supplier"/>
                            <field name="currency_id" invisible="1"/>
                        </div>
                        <label for="journal_id"/>
                        <div>
                            <field name="journal_id"
                            domain="[('type','in',['bank', 'cash'])]"
                            invisible="context.get('line_type', False)"
                            widget="selection"
                            on_change="onchange_journal(journal_id, line_dr_ids, False, partner_id, date, amount, type, company_id, context)"
                            string="Payment Method"/>
                        </div>
                        <label for="amount"/>
                        <div>
                            <field name="payment_rate_currency_id" class="oe_inline" on_change="onchange_payment_rate_currency(currency_id, payment_rate, payment_rate_currency_id, date, amount, company_id, context)" groups="base.group_multi_currency" attrs="{'invisible':[('is_multi_currency','=',False)]}"/>
                            <field name="amount" invisible="context.get('line_type', False)" on_change="onchange_amount(amount, payment_rate, partner_id, journal_id, currency_id, type, date, payment_rate_currency_id, company_id, context)" class="oe_inline" widget='monetary' options='{"currency_field": "currency_id"}'/>
                            <field name="custom_currency_help_label" class="oe_inline" attrs="{'invisible':[('is_multi_currency','=',False)]}"/>
                            <field name="payment_rate" required="1" class="oe_inline" on_change="onchange_payment_rate(amount, payment_rate, partner_id, journal_id, currency_id, type, date, payment_rate_currency_id, company_id, context)" attrs="{'invisible':[('is_multi_currency','=',False)]}"/>
                        </div>
                    </group>
                </xpath>
                <field name="amount" position="attributes">
                    <attribute name="options">{"currency_field": "payment_rate_currency_id"}</attribute>
                </field>
                <field name="line_dr_ids" position="attributes">
                    <attribute name="on_change">
                        onchange_line_rate_ids(line_dr_ids, line_cr_ids, amount,
                        currency_id, payment_rate_currency_id, payment_rate,
                        type, context)
                    </attribute>
                </field>
                <field name="line_cr_ids" position="attributes">
                    <attribute name="on_change">
                        onchange_line_rate_ids(line_dr_ids, line_cr_ids, amount,
                        currency_id, payment_rate_currency_id, payment_rate,
                        type, context)
                    </attribute>
                </field>
                <xpath expr="//label[@for='payment_rate']" position="before">
                    <label for="bank_fee" colspan="1"/>
                    <div>
                        <field name="bank_fee"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='line_dr_ids']/tree/field[@name='amount_original']" position="before">
                    <field name="payment_rate" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='line_dr_ids']/tree/field[@name='amount_original']" position="after">
                    <field name="amount_original_currency" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='line_dr_ids']/tree/field[@name='amount_unreconciled']" position="after">
                    <field name="amount_unreconciled_currency" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='line_dr_ids']/tree/field[@name='amount_unreconciled']" position="attributes">
                    <attribute name="attrs">{'readonly': [('payment_rate', '!=', 1)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='line_dr_ids']/tree/field[@name='amount_unreconciled_currency']" position="attributes">
                    <attribute name="attrs">{'readonly': [('payment_rate', '=', 1)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='line_dr_ids']/tree/field[@name='amount']" position="before">
                    <field name="amount_currency"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>

